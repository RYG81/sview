// per-vertex input
attribute vec4 vVertex;
attribute vec2 vTexCoord;

// outs to fragment shader
varying vec2 fTexCoord;

void main(void) {
    // just copy, pipeline interleave coordinates self
    fTexCoord = vTexCoord;
    // note - projection matrix not applied!
    gl_Position = vVertex;
}
